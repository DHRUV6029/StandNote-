{
  "manifest_version": 2,
  "name": "StandNote",
  "version": "1.0.0",
  "description": "StandNote description",
  "short_name": "StandNote",

  "icons": {},

  "browser_action": {
    "default_popup": "html/popup.html"
  },

  "background": {
    "scripts": ["javascript/background.js"],
    "persistant": false
  },

  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["javascript/detect.js"] }
  ],

  "permissions": ["<all_urls>", "tabs", "tabCapture"]
}
